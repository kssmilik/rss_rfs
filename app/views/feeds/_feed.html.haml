= button_to 'like',feed_check_as_favourite_path(feed), :method=>:put, class: feed.favourite? ? ( 'btn btn-mini btn-danger btn-red pull-right') : ('btn btn-mini pull-right')
%strong
  %p= link_to feed.name, feed.url, class: 'helvetica_neue_font'
- if feed.summary.present?
  %p= feed.summary.html_safe
%p= link_to 'comments', feed_path(feed), class: 'btn btn-mini pull-right'
%p= link_to 'view original', feed.url, class: 'btn btn-mini pull-right'
