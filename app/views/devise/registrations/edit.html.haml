.row
  .span10.offset2
    %section#deviseauth
      #local.box
        .span5
          %p.lead Edit my credentials:
          .gray_block
            .form-horizontal
              = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
                .control-group
                  = f.label :first_name, class: 'control-label'
                  .controls
                    = f.text_field :first_name, class: 'styled-input'
                .control-group
                  = f.label :last_name, class: 'control-label'
                  .controls
                    = f.text_field :last_name, class: 'styled-input'
                .control-group
                  = f.label :login, class: 'control-label'
                  .controls
                    = f.text_field :login, class: 'styled-input'
                .control-group
                  = f.label :email, class: 'control-label'
                  .controls
                    = f.email_field :email, class: 'styled-input'
                .control-group
                  = f.label :avatar, class: 'control-label'
                  .controls
                    = f.file_field :avatar
                .control-group
                  = f.label :password, class: 'control-label'
                  .controls
                    = f.password_field :password, autocomplete: "off", class: 'styled-input'
                .control-group
                  = f.label :password_confirmation, class: 'control-label'
                  .controls
                    = f.password_field :password_confirmation, autocomplete: "off", class: 'styled-input'
                .control-group
                  = f.label :role, class: 'control-label'
                  .controls
                    - for role in User::ROLES
                      = radio_button_tag "user[roles][]", role, @user.roles.include?(role)
                      = h role.humanize
                      %br/
                    = hidden_field_tag "user[roles][]", ""
                .control-group
                  = f.label :current_password, class: 'control-label'
                  .controls
                    = f.password_field :current_password, autocomplete: "on", class: 'styled-input'
                  %br
                  = f.submit "Update", class: 'btn offset3 btn-danger'
                  = button_to 'Destroy Account', user_registration_path, confirm: 'Are you sure you want to destroy your account?', method: :delete, class: 'btn offset'
